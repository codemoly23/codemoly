generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String    @id @default(cuid()) @db.VarChar(36)
  email     String    @unique(map: "email") @db.VarChar(255)
  password  String    @db.VarChar(255)
  name      String    @db.VarChar(255)
  role      Role?     @default(ADMIN)
  createdAt DateTime? @default(now()) @db.DateTime(0)
  updatedAt DateTime? @default(now()) @updatedAt @db.DateTime(0)
  blogs     Blog[]
}

model SiteSettings {
  id            String    @id @default("main") @db.VarChar(36)
  heroVideoUrl  String?   @default("https://www.youtube.com/embed/9s2ydfkRz2E") @db.VarChar(500)
  heroTitle     String?   @db.Text
  heroSubtitle  String?   @db.Text
  servicesTitle String?   @default("Intelligent Solutions for Every Business Need") @db.VarChar(255)
  servicesDesc  String?   @db.Text
  updatedAt     DateTime? @default(now()) @updatedAt @db.DateTime(0)
}

model Service {
  id          String    @id @default(cuid()) @db.VarChar(36)
  title       String    @db.VarChar(255)
  description String    @db.Text
  icon        String    @db.VarChar(100)
  gradient    String    @db.VarChar(255)
  features    Json?
  stats       Json?
  order       Int?      @default(0)
  isActive    Boolean?  @default(true)
  createdAt   DateTime? @default(now()) @db.DateTime(0)
  updatedAt   DateTime? @default(now()) @updatedAt @db.DateTime(0)
}

model Product {
  id             String    @id @default(cuid()) @db.VarChar(36)
  title          String    @db.VarChar(255)
  description    String    @db.Text
  category       String    @db.VarChar(100)
  image          String    @db.VarChar(500)
  icon           String    @db.VarChar(100)
  gradient       String    @db.VarChar(255)
  stats          Json?
  features       Json?
  demoUrl        String?   @db.VarChar(500)
  detailsSlug    String    @unique(map: "detailsSlug") @db.VarChar(255)
  detailsContent String?   @db.LongText
  order          Int?      @default(0)
  isActive       Boolean?  @default(true)
  createdAt      DateTime? @default(now()) @db.DateTime(0)
  updatedAt      DateTime? @default(now()) @updatedAt @db.DateTime(0)
}

model Event {
  id          String     @id @default(cuid()) @db.VarChar(36)
  title       String     @db.VarChar(255)
  subtitle    String?    @db.VarChar(255)
  description String?    @db.Text
  mediaType   MediaType? @default(IMAGE)
  mediaUrl    String     @db.VarChar(500)
  thumbnail   String?    @db.VarChar(500)
  gradient    String     @db.VarChar(255)
  eventDate   DateTime?  @db.DateTime(0)
  location    String?    @db.VarChar(255)
  externalUrl String?    @db.VarChar(500)
  order       Int?       @default(0)
  isActive    Boolean?   @default(true)
  createdAt   DateTime?  @default(now()) @db.DateTime(0)
  updatedAt   DateTime?  @default(now()) @updatedAt @db.DateTime(0)
}

model EventSectionSettings {
  id             String            @id @default("main") @db.VarChar(36)
  sectionTitle   String?           @default("Global Events") @db.VarChar(255)
  sectionDesc    String?           @db.Text
  displayMode    EventDisplayMode? @default(GRID)
  autoSlideDelay Int?              @default(5000)
  updatedAt      DateTime?         @default(now()) @updatedAt @db.DateTime(0)
}

model BlogCategory {
  id        String         @id @default(cuid()) @db.VarChar(36)
  name      String         @unique(map: "name") @db.VarChar(100)
  slug      String         @unique(map: "slug") @db.VarChar(100)
  parentId  String?        @db.VarChar(36)
  createdAt DateTime?      @default(now()) @db.DateTime(0)
  updatedAt DateTime?      @default(now()) @updatedAt @db.DateTime(0)
  blogs     Blog[]
  parent    BlogCategory?  @relation("SubCategories", fields: [parentId], references: [id], onUpdate: NoAction, map: "BlogCategory_ibfk_1")
  children  BlogCategory[] @relation("SubCategories")

  @@index([parentId], map: "parentId")
}

model Blog {
  id          String       @id @default(cuid()) @db.VarChar(36)
  title       String       @db.VarChar(255)
  slug        String       @unique(map: "slug") @db.VarChar(255)
  excerpt     String?      @db.Text
  content     String       @db.LongText
  coverImage  String?      @db.VarChar(500)
  isPublished Boolean?     @default(false)
  publishedAt DateTime?    @db.DateTime(0)
  categoryId  String       @db.VarChar(36)
  authorId    String       @db.VarChar(36)
  createdAt   DateTime?    @default(now()) @db.DateTime(0)
  updatedAt   DateTime?    @default(now()) @updatedAt @db.DateTime(0)
  category    BlogCategory @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Blog_ibfk_1")
  author      Admin        @relation(fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Blog_ibfk_2")

  @@index([authorId], map: "authorId")
  @@index([categoryId], map: "categoryId")
}

model Media {
  id        String    @id @default(cuid()) @db.VarChar(36)
  filename  String    @db.VarChar(255)
  path      String    @db.VarChar(500)
  mimeType  String    @db.VarChar(100)
  size      Int
  alt       String?   @db.VarChar(255)
  createdAt DateTime? @default(now()) @db.DateTime(0)
}

enum Role {
  SUPER_ADMIN
  ADMIN
  EDITOR
}

enum MediaType {
  IMAGE
  VIDEO
  YOUTUBE
}

enum EventDisplayMode {
  GRID
  SLIDER
}
